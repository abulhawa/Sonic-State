{
  "expo": {
    "name": "Sonic State",
    "slug": "sonic-state",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0A0F"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sonicstate.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Sonic State needs microphone access to analyze your voice for 30 seconds. Nothing is recorded or stored.",
        "NSUserTrackingUsageDescription": "Sonic State does not track you. This permission is not used."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0A0F"
      },
      "package": "com.sonicstate.app",
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Sonic State needs microphone access to analyze your voice for 30 seconds. Nothing is recorded or stored."
        }
      ]
    ]
  }
}
